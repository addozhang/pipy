{
  "listen": 8000,
  "plugins": [
    "plugins/router.js",
    "plugins/cache.js",
    "plugins/hello.js",
    "plugins/balancer.js",
    "plugins/serve-files.js",
    "plugins/default.js"
  ],
  "endpoints": {
    "/hi": {
      "route": "hi"
    },
    "/api": {
      "route": "api",
      "rewrite": ["^/api/?", "/"]
    },
    "/*": {
      "route": "home"
    }
  },
  "hello": {
    "hi": {
      "status": 200,
      "content-type": "text/plain",
      "message": "Hi, there!\n"
    }
  },
  "upstreams": {
    "api": {
      "policy": "round-robin",
      "targets": ["localhost:80"]
    }
  },
  "serve-files": {
    "home": {
      "root": "home"
    }
  },
  "cache": {
    "home": {
      "extensions": ["/", ".html", ".css", ".js"],
      "timeout": "10s"
    }
  },
  "log": [
    {
      "url": "http://localhost:8123",
      "headers": {},
      "batch": {
        "size": 1000,
        "separator": "\n"
      }
    }
  ]
}
